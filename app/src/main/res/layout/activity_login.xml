<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
     >
    <LinearLayout  
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/color_blue"
	    >
	
	    <TextView
	        android:id="@+id/login_title"
	        android:layout_width="match_parent"
	        android:layout_height="47dp"
	        android:fitsSystemWindows="true"
	        android:text="登录界面"
	        android:textColor="@color/white"
	        android:textSize="16sp"
	        android:layout_gravity="center"
	        android:gravity="center"
	         />
	</LinearLayout>
	
    <LinearLayout  
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    >
	    <ImageView
	        android:id="@+id/login_user_avatar"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical"
	        android:src="@drawable/icon_avatar"
	        android:scaleType="fitXY"
            android:contentDescription="@null"
	         />
	</LinearLayout>
    
    <LinearLayout  
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    >
	    <TextView
	        android:id="@+id/login_user_icon"
	        android:layout_width="60dp"
	        android:layout_height="30dp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical"
	        android:src="@drawable/icon_login_user"
	        android:scaleType="centerInside"
	        android:contentDescription="@null"
			android:tintMode="src_in"
			android:tint="@color/colorPrimary"
			android:text="登录账号"
			android:textColor="@color/colorPrimary"
			android:textSize="15dp"
	         />
	    <EditText
	        android:id="@+id/login_user_text"
	        android:layout_width="200dp"
	        android:layout_height="30dp"
	        android:hint="登录账号昵称"
	        android:textColor="@color/grey"
	        android:textSize="16sp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical"
	        android:background="@drawable/login_edit_bg"
	        android:layout_marginLeft="15dp"
	        android:lines="1"
	        android:maxLines="1"
	        android:paddingLeft="8dp"
	         />
	</LinearLayout>
	
    <LinearLayout  
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    >
	    <TextView
	        android:id="@+id/login_password_icon"
	        android:layout_width="60dp"
	        android:layout_height="30dp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical"
	        android:src="@drawable/icon_login_password"
	        android:scaleType="centerInside"
	        android:contentDescription="@null"
			android:tintMode="src_in"
			android:tint="@color/colorPrimary"
			android:text="登录密码"
			android:textColor="@color/colorPrimary"
			android:textSize="15dp"
	         />
	    <EditText
	        android:id="@+id/login_password_text"
	        android:layout_width="200dp"
	        android:layout_height="30dp"
	        android:hint="登录账号密码"
	        android:textColor="@color/grey"
	        android:textSize="16sp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical"
	        android:background="@drawable/login_edit_bg"
	        android:layout_marginLeft="15dp"
	        android:lines="1"
	        android:maxLines="1"
	        android:paddingLeft="8dp"
	        android:inputType="textPassword"
	         />
	</LinearLayout>
	
    <LinearLayout  
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    android:visibility="gone"
	    >
	    <ImageView
	        android:id="@+id/login_mobile_icon"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical"
	        android:src="@drawable/icon_mobile"
	        android:scaleType="centerInside"
	        android:contentDescription="@null"
	         />
	    <EditText
	        android:id="@+id/login_mobile_text"
	        android:layout_width="200dp"
	        android:layout_height="30dp"
	        android:hint="绑定手机号码"
	        android:textColor="@color/grey"
	        android:textSize="16sp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical"
	        android:background="@drawable/login_edit_bg"
	        android:layout_marginLeft="15dp"
	        android:lines="1"
	        android:maxLines="1"
	        android:paddingLeft="8dp"
	        android:inputType="phone"
	         />
	</LinearLayout>
	
    
	<TextView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:text="登          录"
        android:textSize="18dp"
		android:textColor="@color/white"
		android:background="@color/color_blue"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="40dp"
         />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="20dp"
		>
		<LinearLayout
			android:id="@+id/login_remember"
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
			<ImageView
				android:id="@+id/login_remember_icon"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:src="@drawable/squre_select"
				android:layout_gravity="center_vertical"
				/>
			<TextView
				android:id="@+id/login_remember_text"
				android:layout_width="wrap_content"
				android:layout_height="20dp"
				android:text="记住账号"
				android:textSize="12dp"
				android:textColor="@color/white"
				android:background="@color/color_blue"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:layout_marginStart="5dp"
				android:layout_gravity="center_vertical"
				/>

		</LinearLayout>

		<TextView
			android:id="@+id/login_register"
			android:layout_width="wrap_content"
			android:layout_height="20dp"
			android:text="注  册"
			android:textSize="12dp"
			android:textColor="@color/white"
			android:background="@color/color_blue"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:layout_alignParentRight="true"
			/>

	</RelativeLayout>
</LinearLayout>
